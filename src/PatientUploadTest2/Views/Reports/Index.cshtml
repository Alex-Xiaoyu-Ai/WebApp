@model IEnumerable<PatientUploadTest2.Models.Report>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().Patient.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Auditor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Diagnosis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Observation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PublishingTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WritingTime)
            </th>
