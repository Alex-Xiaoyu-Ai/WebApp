@model IEnumerable<PatientUploadTest2.Models.Patient>

@{
    ViewData["Title"] = "Index";
    
   
}

<h2>
    @ViewData["h2"]
</h2>

<p>
    <a asp-action="Create">@ViewData["create"]</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Study)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HistoryPath)
            </th>
            
            
            
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Study)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HistoryPath)
            </td>
            
            
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">@ViewData["edit"]</a> |
                <a asp-action="Details" asp-route-id="@item.id">@ViewData["detail"]</a> |
                <a asp-action="Delete" asp-route-id="@item.id">@ViewData["delete"]</a>
            </td>
        </tr>
}
    </tbody>
</table>
